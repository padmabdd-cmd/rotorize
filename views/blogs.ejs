  const blogOrder = Object.keys(blogs); // preserves insertion order above
  const popup = document.getElementById("popup");
  const popupBody = document.getElementById("popupBody");
  const popupClose = document.getElementById("popupClose");
  const prevBtn = document.getElementById("prevBtn");
  const nextBtn = document.getElementById("nextBtn");

  let currentIndex = -1;

  function showBlogByIndex(index) {
    if (index < 0 || index >= blogOrder.length) return;
    const id = blogOrder[index];
    const blog = blogs[id];
    currentIndex = index;

    popupBody.innerHTML = `
      <img src="${blog.img}" alt="${blog.title}" class="popup-image" loading="lazy" />
      <div class="popup-body">
        <h3 id="popupTitle">${blog.title}</h3>
        ${blog.content}
      </div>
    `;

    // slight delay so image transition class can be applied after render
    requestAnimationFrame(() => {
      const img = popupBody.querySelector('.popup-image');
      if (img) img.classList.add('zoom');
    });

    updateNavButtons();
    popup.classList.add("active");
    document.body.style.overflow = "hidden";
    // focus for accessibility
    setTimeout(() => {
      const close = document.getElementById('popupClose');
      if (close) close.focus();
    }, 220);
  }

  function updateNavButtons() {
    prevBtn.disabled = (currentIndex <= 0);
    nextBtn.disabled = (currentIndex >= blogOrder.length - 1);
  }

  document.querySelectorAll(".blog-card").forEach((card, idx) => {
    card.addEventListener("click", () => {
      const id = card.dataset.blog;
      const index = blogOrder.indexOf(id);
      if (index !== -1) showBlogByIndex(index);
    });
  });

  prevBtn.addEventListener('click', () => {
    if (currentIndex > 0) showBlogByIndex(currentIndex - 1);
  });
  nextBtn.addEventListener('click', () => {
    if (currentIndex < blogOrder.length - 1) showBlogByIndex(currentIndex + 1);
  });

  popupClose.addEventListener("click", () => {
    popup.classList.remove("active");
    document.body.style.overflow = "auto";
  });

  popupClose.addEventListener('keydown', (e) => {
    if (e.key === 'Enter' || e.key === ' ') {
      popup.classList.remove('active');
      document.body.style.overflow = 'auto';
    }
  });

  popup.addEventListener("click", e => {
    if (e.target === popup) {
      popup.classList.remove("active");
      document.body.style.overflow = "auto";
    }
  });

  // keyboard navigation for next/prev
  document.addEventListener('keydown', (e) => {
    if (!popup.classList.contains('active')) return;
    if (e.key === 'ArrowLeft') {
      if (currentIndex > 0) showBlogByIndex(currentIndex - 1);
    } else if (e.key === 'ArrowRight') {
      if (currentIndex < blogOrder.length - 1) showBlogByIndex(currentIndex + 1);
    } else if (e.key === 'Escape') {
      popup.classList.remove('active');
      document.body.style.overflow = 'auto';
    }
  });

  /* ---- Scroll Reveal ---- */
  const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
      if (entry.isIntersecting) entry.target.classList.add("show");
    });
  }, { threshold: 0.2 });

  document.querySelectorAll(".blog-card").forEach(card => observer.observe(card));
