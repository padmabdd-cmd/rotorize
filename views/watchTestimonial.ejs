<!DOCTYPE html>
<html>
<head>
  <title>Testimonial Video</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
    body {
      margin: 0;
      height: 100vh;
      background: rgba(0,0,0,0.95);
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: Poppins;
      overflow: hidden;
    }

    /* Overlay */
    .overlay {
      position: fixed;
      inset: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      animation: fadeIn 0.3s ease forwards;
    }

    .overlay.hide {
      animation: fadeOut 0.3s ease forwards;
    }

    @keyframes fadeIn {
      from { opacity: 0 }
      to { opacity: 1 }
    }

    @keyframes fadeOut {
      from { opacity: 1 }
      to { opacity: 0 }
    }

    /* Video Container */
    .video-wrapper {
      position: relative;
      width: 90vmin;
      height: 90vmin;
      max-width: 520px;
      max-height: 520px;
      background: black;
      border: 4px solid #00ffff;
      border-radius: 14px;
      overflow: hidden;
      touch-action: none;
    }

    video {
      width: 100%;
      height: 100%;
      object-fit: contain;
      background: black;
    }

    /* Close Button */
    .close-btn {
      position: absolute;
      top: 10px;
      right: 10px;
      width: 34px;
      height: 34px;
      border-radius: 50%;
      background: rgba(0,0,0,0.6);
      color: #00ffff;
      border: 2px solid #00ffff;
      font-size: 18px;
      cursor: pointer;
      z-index: 5;
    }

    .close-btn:hover {
      background: #00ffff;
      color: black;
    }

    /* Custom Controls */
    .controls {
      position: absolute;
      bottom: 12px;
      left: 12px;
      right: 12px;
      display: flex;
      align-items: center;
      gap: 10px;
      z-index: 5;
    }

    .play-btn {
      width: 38px;
      height: 38px;
      border-radius: 50%;
      border: none;
      background: #00ffff;
      color: black;
      font-size: 16px;
      cursor: pointer;
    }

    .progress {
      flex: 1;
      height: 6px;
      background: #222;
      border-radius: 4px;
      cursor: pointer;
    }

    .progress-bar {
      height: 100%;
      width: 0%;
      background: #00ffff;
      border-radius: 4px;
    }
  </style>
</head>

<body>

<div class="overlay" id="overlay">
  <div class="video-wrapper" id="videoWrapper">
    <button class="close-btn" id="closeBtn">✕</button>

    <video id="video">
      <source src="/videos/feedback<%= cardNumber %>.mp4" type="video/mp4">
    </video>

    <div class="controls">
      <button class="play-btn" id="playBtn">▶</button>
      <div class="progress" id="progress">
        <div class="progress-bar" id="progressBar"></div>
      </div>
    </div>
  </div>
</div>

<script>
  const video = document.getElementById("video");
  const playBtn = document.getElementById("playBtn");
  const progress = document.getElementById("progress");
  const progressBar = document.getElementById("progressBar");
  const overlay = document.getElementById("overlay");
  const closeBtn = document.getElementById("closeBtn");

  /* Play / Pause */
  playBtn.onclick = () => {
    if (video.paused) {
      video.play();
      playBtn.textContent = "⏸";
    } else {
      video.pause();
      playBtn.textContent = "▶";
    }
  };

  /* Progress Update */
  video.ontimeupdate = () => {
    const percent = (video.currentTime / video.duration) * 100;
    progressBar.style.width = percent + "%";
  };

  /* Seek */
  progress.onclick = (e) => {
    const rect = progress.getBoundingClientRect();
    const pos = (e.clientX - rect.left) / rect.width;
    video.currentTime = pos * video.duration;
  };

  /* Close with animation */
  function closeVideo() {
    video.pause();
    overlay.classList.add("hide");
    setTimeout(() => {
      window.location.href = "/testimonials";
    }, 300);
  }

  closeBtn.onclick = closeVideo;

  /* Swipe Down to Close (Mobile) */
  let startY = 0;

  overlay.addEventListener("touchstart", e => {
    startY = e.touches[0].clientY;
  });

  overlay.addEventListener("touchend", e => {
    const endY = e.changedTouches[0].clientY;
    if (endY - startY > 120) {
      closeVideo();
    }
  });

  /* Keyboard Shortcut (Reliable) */
  window.addEventListener("keydown", e => {
    if (e.key.toLowerCase() === "x") {
      closeVideo();
    }
  });

  /* Autoplay */
  video.play();
  playBtn.textContent = "⏸";
</script>

</body>
</html>
