<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("partials/head", { meta: meta, site: site }) %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#ff9a00">

  <!-- Preload hero image -->
  <link rel="preload" as="image" href="/images/drone.jpeg">

  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@700&family=Poppins:wght@400;500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    /* GLOBAL: ensure page-level orange background (strong) */
    html, body {
      margin: 0;
      padding: 0;
      background-color: #ff9a00 !important;
      color: #fff;
      font-family: 'Poppins', sans-serif;
      overflow-x: hidden;
    }

    /* HERO SECTION - UNTOUCHED */
    .page-hero {
      position: relative;
      height: 80vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      overflow: hidden;
      background: #000;
    }
    .page-hero img.bg {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: 0;
      filter: brightness(100%);
    }
    .page-hero::after {
      content: "";
      position: absolute;
      inset: 0;
      background: rgba(0,0,0,0.45);
      z-index: 1;
    }
    .page-hero h1,
    .page-hero p {
      position: relative;
      z-index: 2;
      opacity: 0;
      animation: fadeInUp 1s ease-out forwards;
    }
    .page-hero h1 {
      animation-delay: 0.2s;
      font-size: 3rem;
      color: #001f4d;
      text-shadow: 0 0 10px #00bfff, 0 0 20px #00bfff, 0 0 40px #00bfff;
      letter-spacing: 2px;
      text-transform: uppercase;
      font-weight: 800;
      margin-bottom: 15px;
      animation: glowPulse 3s infinite alternate, fadeInUp 1s ease-out forwards;
    }
    .page-hero p {
      color: #fff;
      font-size: 1.2rem;
      text-shadow: 0 2px 6px rgba(0,0,0,0.8);
      animation-delay: 0.5s;
      max-width: 700px;
      line-height: 1.6;
    }

    @keyframes glowPulse {
      from { text-shadow: 0 0 10px #00bfff, 0 0 20px #00bfff; }
      to { text-shadow: 0 0 20px #00ffff, 0 0 80px #00ffff; }
    }
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(40px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* PORTFOLIO SECTION */
    .portfolio-section {
      background: #ff9a00 !important;
      color: #fff;
      padding: 80px 20px;
      text-align: center;
    }

    /* ðŸ”¥ UPDATED â€” Animate immediately on page load */
    .portfolio-title {
      font-family: 'Merriweather', serif;
      font-size: 2rem;
      color: #fff;
      text-shadow: 0 0 10px rgba(0,191,255,0.6);
      margin-bottom: 50px;
      font-weight: 700;
      opacity: 0;
      transform: translateY(40px);
      animation: fadeInUp 1s ease-out forwards;  /* ðŸ”¥ immediate animation */
    }

    .portfolio-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 40px;
      margin-top: 50px;
    }

    .portfolio-card {
      background: linear-gradient(145deg, #ffffff, #f5f5f5);
      color: #000;
      border-radius: 20px;
      overflow: hidden;
      width: 340px;
      transition: all 0.6s ease;
      box-shadow: 0 8px 20px rgba(0,0,0,0.3);
      position: relative;
      opacity: 0;
      transform: translateY(60px) scale(0.95);
    }
    .portfolio-card.visible {
      opacity: 1;
      transform: translateY(0) scale(1);
      box-shadow: 0 10px 30px rgba(0,191,255,0.4);
    }
    .portfolio-card:hover {
      transform: translateY(-10px) scale(1.03);
      box-shadow: 0 20px 40px rgba(0, 191, 255, 0.6);
    }

    .portfolio-card img {
      width: 100%;
      height: 220px;
      object-fit: cover;
      transition: transform 0.6s ease;
      border-bottom: 4px solid #00bfff;
    }
    .portfolio-card img.aerial-photo,
    .portfolio-card img.windmill {
      object-fit: contain !important;
      background-color: #fff !important;
      padding: 10px !important;
      height: 220px !important;
      border-bottom: 4px solid #00bfff !important;
    }

    .portfolio-card:hover img {
      transform: scale(1.05);
    }

    .portfolio-content {
      padding: 20px 18px 30px 18px;
    }
    .portfolio-card h3 {
      font-family: 'Merriweather', serif;
      color: #0b3d0b;
      margin-bottom: 12px;
      font-size: 1.2rem;
      text-transform: capitalize;
    }
    .portfolio-card p {
      font-size: 0.95rem;
      color: #444;
      line-height: 1.5;
    }

    @media (max-width:768px){
      .page-hero { height:65vh; }
      .page-hero h1 { font-size:2rem; }
      .page-hero p {
        font-size:1rem;
        padding: 0 10px;
        margin: 0 15px;
      }
      .portfolio-card { width: 90%; }
      .portfolio-card img { height: 200px; }
    }
  </style>
</head>

<body>
  <%- include("partials/navbar"); %>

  <!-- HERO SECTION -->
  <section class="page-hero" role="banner" aria-label="Portfolio showcase">
    <img src="/images/drone.jpeg" alt="Drone flying over landscape" class="bg" loading="eager">
    <h1>PORTFOLIO</h1>
    <p>Check our professional drone work across mapping, inspections, and creative projects</p>
  </section>

  <!-- PORTFOLIO SECTION -->
  <section class="portfolio-section" aria-label="Portfolio projects">
    <h2 class="portfolio-title">Our Projects</h2>

    <div class="portfolio-container">
      <% const projects = [
        {img:'/images/portfolio1.jpg', title:'Drone Mapping Project', desc:'High-resolution mapping and 3D modeling for construction sites.'},
        {img:'/images/portfolio2.jpeg', title:'Industrial Inspection', desc:'Safety and maintenance inspections for industrial facilities using drones.'},
        {img:'/images/portfolio3.jpeg', title:'Creative Aerial Photography', desc:'Stunning aerial visuals for marketing and promotional content.', special:'aerial-photo'},
        {img:'/images/Bullet_Train_Project_for_NHSRCL_Program.jpg', title:'Bullet Train Project (NHSRCL)', desc:'Aerial mapping and monitoring for Indiaâ€™s high-speed rail corridor ensuring accuracy and progress tracking.'},
        {img:'/images/Deonar_Dumping_Ground_Project.jpg', title:'Deonar Dumping Ground Project', desc:'Environmental analysis and 3D topography mapping for waste management and land restoration.'},
        {img:'/images/Goa_Rope_Way_Project.jpeg', title:'Goa Rope Way Project', desc:'High-accuracy aerial route survey for coastal infrastructure development in Goa.'},
        {img:'/images/golf_ground_inspection.jpeg', title:'Golf Ground Inspection', desc:'Precision aerial inspection for golf courses focusing on irrigation and turf management.'},
        {img:'/images/Half-Long_Flood_Railway_Track_Reconstruction_Program.png', title:'Flood Railway Track Reconstruction', desc:'Drone-based survey aiding track restoration and alignment verification in flood-affected regions.'},
        {img:'/images/pipeline_inspection.jpeg', title:'Pipeline Inspection', desc:'Comprehensive UAV pipeline monitoring for leak detection and structural safety assessment.'},
        {img:'/images/railway_line_inspection.jpeg', title:'Railway Line Inspection', desc:'Drone inspections ensuring safety, track monitoring, and preventive maintenance operations.'},
        {img:'/images/wind_pipe_inspection.png', title:'Windmill Inspection', desc:'High-resolution aerial inspection for turbine blade condition and performance optimization.', special:'windmill'}
      ]; %>

      <% projects.forEach((p, index) => { %>
        <div class="portfolio-card">
          <img src="<%= p.img %>" alt="<%= p.title %>" class="<%= p.special || '' %>">
          <div class="portfolio-content">
            <h3><%= p.title %></h3>
            <p><%= p.desc %></p>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

  <%- include("partials/footer"); %>

  <script>
    /* Existing card animation */
    const observer = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        } else {
          entry.target.classList.remove('visible');
        }
      });
    }, { threshold: 0.15 });

    document.querySelectorAll('.portfolio-card').forEach(card => observer.observe(card));
  </script>
</body>
</html>
