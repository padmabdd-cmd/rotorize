  <style>
    html, body {
      margin: 0;
      padding: 0;
      background-color: #ff9a00 !important;
      color: #fff;
      font-family: 'Poppins', sans-serif;
      overflow-x: hidden;
      scroll-behavior: smooth;
    }

    /* ---------- HERO ---------- */
    .page-hero {
      position: relative;
      height: 80vh;
      background: url('/images/drone.jpeg') center center / cover no-repeat fixed;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      overflow: hidden;
    }

    .page-hero::after {
      content: "";
      position: absolute;
      inset: 0;
      background: rgba(0,0,0,0.45);
      z-index: 1;
    }

    .page-hero h1, .page-hero p {
      position: relative;
      z-index: 2;
      opacity: 0;
      animation: fadeInUp 1s ease-out forwards;
    }

    .page-hero h1 {
      animation-delay: 0.2s;
      font-size: 3rem;
      color: #001f4d;
      text-shadow: 0 0 10px #00bfff, 0 0 20px #00bfff, 0 0 40px #00bfff;
      letter-spacing: 2px;
      text-transform: uppercase;
      font-weight: 800;
      margin-bottom: 15px;
      animation: glowPulse 3s infinite alternate, fadeInUp 1s ease-out forwards;
    }

    .page-hero p {
      color: #fff;
      font-size: 1.2rem;
      text-shadow: 0 2px 6px rgba(0,0,0,0.8);
      animation-delay: 0.5s;
      max-width: 700px;
      line-height: 1.6;
    }

    @keyframes glowPulse {
      from { text-shadow: 0 0 10px #00bfff; }
      to { text-shadow: 0 0 30px #00ffff; }
    }

    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(40px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* ---------- ABOUT SECTION ---------- */
    .about-section {
      background: #ff9a00;
      color: #fff;
      padding: 80px 20px;
      text-align: center;
    }

    /* ✅ ONLY CHANGE ADDED: Animated heading */
    .about-title {
      font-family: 'Merriweather', serif;
      font-size: 2rem;
      color: #fff;
      text-shadow: 0 0 10px rgba(0, 191, 255, 0.6);
      margin-bottom: 50px;
      font-weight: 700;
      opacity: 0;
      transform: translateY(40px);
      animation: fadeInUp 1s ease-out forwards;
    }

    .about-container {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
      width: 100%;
      max-width: 1200px;
      margin: 50px auto;
      padding: 0 20px;
    }

    @media (max-width: 768px) {
      .about-container {
        grid-template-columns: 1fr;
        gap: 30px;
      }
    }

    .about-card {
      background: #fff;
      color: #000;
      border-radius: 15px;
      padding: 40px 25px;
      text-align: center;
      box-shadow: 0 4px 10px rgba(0,0,0,0.25);
      border-top: 5px solid #00b894;
      transition: transform 0.25s ease, box-shadow 0.25s ease;
      opacity: 0;
      transform: translateX(-60px);
      will-change: transform, opacity;
    }

    .about-card:nth-child(even) {
      transform: translateX(60px);
    }

    .about-card.in-view {
      animation-duration: 0.85s;
      animation-fill-mode: forwards;
      animation-timing-function: cubic-bezier(.2,.9,.2,1);
    }

    .about-card.in-view {
      animation-name: slideInLeft;
    }

    .about-card.in-view:nth-child(even) {
      animation-name: slideInRight;
    }

    .about-card:nth-child(1).in-view { animation-delay: 0.08s; }
    .about-card:nth-child(2).in-view { animation-delay: 0.18s; }
    .about-card:nth-child(3).in-view { animation-delay: 0.28s; }
    .about-card:nth-child(4).in-view { animation-delay: 0.38s; }
    .about-card:nth-child(5).in-view { animation-delay: 0.48s; }
    .about-card:nth-child(6).in-view { animation-delay: 0.58s; }
    .about-card:nth-child(7).in-view { animation-delay: 0.68s; }
    .about-card:nth-child(8).in-view { animation-delay: 0.78s; }

    @keyframes slideInLeft {
      from { opacity: 0; transform: translateX(-60px); }
      to { opacity: 1; transform: translateX(0); }
    }

    @keyframes slideInRight {
      from { opacity: 0; transform: translateX(60px); }
      to { opacity: 1; transform: translateX(0); }
    }

    .about-card i {
      font-size: 2.5rem;
      color: #00b894;
      margin-bottom: 15px;
    }

    .about-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 10px 25px rgba(0, 184, 148, 0.5);
    }

    @media (prefers-reduced-motion: reduce) {
      .about-card, .page-hero h1, .page-hero p {
        animation: none !important;
        transition: none !important;
        transform: none !important;
        opacity: 1 !important;
      }
    }
