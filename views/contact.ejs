<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("partials/head", { meta: meta || {}, site: site }) %>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@700&family=Poppins:wght@400;500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    /* ================= ORIGINAL STYLES (UNCHANGED) ================= */
    html, body {
      margin: 0;
      padding: 0;
      background: #ff9a00 !important;
      color: #fff;
      font-family: 'Poppins', sans-serif;
      overflow-x: hidden;
      scroll-behavior: smooth;
    }

    .page-hero {
      position: relative;
      height: 80vh;
      background: url('/images/drone.jpeg') center/cover no-repeat;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      overflow: hidden;
    }

    .page-hero::after {
      content: "";
      position: absolute;
      inset: 0;
      background: rgba(0,0,0,0.45);
      z-index: 1;
    }

    .page-hero h1, .page-hero p {
      position: relative;
      z-index: 2;
      opacity: 0;
      animation: fadeInUp 1s ease-out forwards;
    }

    .page-hero h1 {
      animation: glowPulse 3s infinite alternate, fadeInUp 1s ease-out forwards;
      animation-delay: 0.2s;
      font-size: 3rem;
      color: #001f4d;
      text-shadow: 0 0 10px #00bfff, 0 0 20px #00bfff;
      letter-spacing: 2px;
      text-transform: uppercase;
      font-weight: 800;
      margin-bottom: 15px;
    }

    .page-hero p {
      color: #fff;
      font-size: 1.2rem;
      animation-delay: 0.5s;
      max-width: 700px;
      line-height: 1.6;
      text-shadow: 0 2px 6px rgba(0,0,0,0.8);
    }

    @keyframes glowPulse {
      from { text-shadow: 0 0 10px #00bfff; }
      to { text-shadow: 0 0 20px #00ffff; }
    }

    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(60px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .contact-section {
      background: transparent !important;
      padding: 80px 20px;
      text-align: center;
      color: #fff;
    }

    .contact-section h2 {
      font-family: 'Merriweather', serif;
      font-size: 2rem;
      text-shadow: 0 0 10px rgba(0,191,255,0.6);
      margin-bottom: 40px;
      font-weight: 700;
      color: #fff;
    }

    .enquiry-card {
      max-width: 600px;
      margin: 0 auto 36px;
      display: grid;
      gap: 12px;
      background: rgba(255, 255, 255, 0);
      border-radius: 12px;
      padding: 14px;
      transform: scale(0.97);
      transition: background 0.4s ease, backdrop-filter 0.4s ease,
                  box-shadow 0.4s ease, transform 0.4s ease;
      box-shadow: none;
    }

    .enquiry-card:hover {
      background: rgba(255,255,255,0.25);
      backdrop-filter: blur(6px);
      box-shadow: 0 8px 30px rgba(0,0,0,0.18);
      transform: scale(1);
    }

    .form-group label { color: #0b3d0b; font-weight: 700; margin-bottom: 6px; }
    .form-group input, .form-group textarea {
      padding: 8px 10px;
      border-radius: 8px;
      border: 1px solid #d6d6d6;
      font-size: 0.95rem;
    }

    .form-group textarea { min-height: 100px; }

    .btn-submit {
      background: #00b894;
      color: #fff;
      padding: 10px 20px;
      border-radius: 30px;
      border: none;
      font-weight: 700;
      cursor: pointer;
    }

    /* ================= POPUP STYLES (UNCHANGED) ================= */
    #popupOverlay {
      display: none;
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.55);
      z-index: 9999;
      justify-content: center;
      align-items: center;
    }

    #popupBox {
      background: #fff;
      color: #333;
      padding: 22px 26px;
      border-radius: 14px;
      width: 340px;
      box-shadow: 0 20px 45px rgba(0,0,0,0.35);
      animation: popupFade 0.3s ease;
      text-align: left;
    }

    .popup-header {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .popup-icon {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      background: #00b894;
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
    }

    .popup-title {
      font-size: 16px;
      font-weight: 600;
      color: #222;
    }

    #popupText {
      margin-top: 10px;
      font-size: 14px;
      color: #555;
    }

    .popup-btn {
      margin-top: 18px;
      background: #00b894;
      border: none;
      color: #fff;
      padding: 8px 22px;
      border-radius: 20px;
      cursor: pointer;
      font-weight: 600;
    }

    @keyframes popupFade {
      from { transform: scale(0.9); opacity: 0; }
      to { transform: scale(1); opacity: 1; }
    }

    /* ================= LOADER (ADDED) ================= */
    #loaderOverlay {
      display: none;
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.6);
      z-index: 10000;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      color: #fff;
    }

    #loaderOverlay div {
      width: 44px;
      height: 44px;
      border: 5px solid rgba(255,255,255,0.3);
      border-top: 5px solid #00e5ff;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-bottom: 10px;
    }

    @keyframes spin { to { transform: rotate(360deg); } }
.contact-info-section {
    background: #ff9a00;
    padding: 60px 20px 80px;
  }

  .contact-info-grid {
    max-width: 1200px;
    margin: auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 24px;
  }

  .contact-card {
    background: #fff;
    color: #333;
    border-radius: 18px;
    padding: 28px 24px;
    text-align: center;
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    transition: transform 0.3s ease;
  }

  .contact-card:hover {
    transform: translateY(-6px);
  }

  .contact-card h3 {
    color: #00695c;
    margin-bottom: 14px;
    font-size: 1.2rem;
    font-weight: 700;
  }

  .contact-card p {
    margin: 6px 0;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .contact-card a {
    color: #0066cc;
    text-decoration: none;
    font-weight: 500;
  }

  .contact-socials {
    margin-top: 14px;
    display: flex;
    justify-content: center;
    gap: 14px;
  }

  .contact-socials a {
    color: #00695c;
    font-size: 18px;
  }
  </style>
</head>

<body>

  <%- include("partials/navbar"); %>

  <section class="page-hero">
    <h1>Contact Us</h1>
    <p>Reach out for DGCA drone training, RPTO services, or aerial inquiries.</p>
  </section>

  <section class="contact-section" id="contact">
    <h2>Get In Touch</h2>

    <form class="enquiry-card" id="contactForm">
      <div class="form-group">
        <label for="enqName">Full Name</label>
        <input id="enqName" name="name" type="text" required>
      </div>

      <div class="form-group">
        <label for="enqPhone">Contact Number</label>
        <input id="enqPhone" name="phone" type="tel" pattern="[0-9]{10}" required>
      </div>

      <div class="form-group">
        <label for="enqEmail">Email</label>
        <input id="enqEmail" name="email" type="email" required>
      </div>

      <div class="form-group">
        <label for="enqMessage">Message</label>
        <textarea id="enqMessage" name="message" required></textarea>
      </div>

      <button class="btn-submit" type="submit" id="submitBtn">Send Enquiry</button>
    </form>
  </section>

  <!-- POPUP -->
  <div id="popupOverlay">
    <div id="popupBox">
      <div class="popup-header">
        <div class="popup-icon">✔</div>
        <div class="popup-title">Success</div>
      </div>
      <p id="popupText"></p>
      <button class="popup-btn" onclick="closePopup()">OK</button>
    </div>
  </div>

  <!-- LOADER -->
  <div id="loaderOverlay">
    <div></div>
    <span>Sending your request...</span>
  </div>
<section class="contact-info-section">
  <div class="contact-info-grid">

    <!-- Corporate Office -->
    <div class="contact-card">
      <h3>Corporate Office</h3>
      <p>Rotorize Aviation</p>
      <p>House No.3, 1st Floor,</p>
      <p>Mukund Path, Six Miles</p>
      <p>GS Road, Guwahati, Assam – 781036</p>
    </div>

    <!-- RPTO Office -->
    <div class="contact-card">
      <h3>RPTO Office</h3>
      <p>Rotorize Aviation RPTO</p>
      <p>Khardi, Thane</p>
      <p>Shahapur</p>
      <p>Maharashtra – 421601</p>
    </div>

    <!-- Contact -->
    <div class="contact-card">
      <h3>Contact</h3>
      <p><strong>Phone:</strong> <a href="tel:+917710050879">+91 77100 50879</a></p>
      <p><strong>Email:</strong><br>
        <a href="mailto:rotorize.aviation.rpto@gmail.com">
          rotorize.aviation.rpto@gmail.com
        </a>
      </p>

      <div class="contact-socials">
        <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
        <a href="#" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
        <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
      </div>
    </div>

    <!-- Opening Hours -->
    <div class="contact-card">
      <h3>Opening Hours</h3>
      <p><strong>Mon – Fri:</strong> 9:00 am – 5:00 pm</p>
      <p><strong>Saturday:</strong> 9:00 am – 6:00 pm</p>
      <p><strong>Sunday:</strong> 9:00 am – 6:00 pm</p>
    </div>

  </div>
</section>

  <%- include("partials/footer"); %>

  <!-- SCRIPT -->
<script>
    const form = document.getElementById("contactForm");
    const loader = document.getElementById("loaderOverlay");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      loader.style.display = "flex";

      const payload = {
        name: enqName.value,
        phone: enqPhone.value,
        email: enqEmail.value,
        message: enqMessage.value
      };

      try {
        const res = await fetch("/contact/submit", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(payload)
        });

        const data = await res.json();
        loader.style.display = "none";

        if (data.success) {
          popupText.innerText =
            "Your request has been forwarded to the relevant team, who will contact you shortly.";
          popupOverlay.style.display = "flex";
          setTimeout(() => popupOverlay.style.display = "none", 5000);
          form.reset();
        } else {
          alert("Submission failed");
        }
      } catch {
        loader.style.display = "none";
        alert("Network error");
      }
    });
  </script>


</body>
</html>