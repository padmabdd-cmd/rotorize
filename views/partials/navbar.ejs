  <nav class="site-navbar" role="navigation" aria-label="Main navigation">
    <div class="container-navbar">
      <div class="brand">
        <a href="/" aria-label="Rotorize Aviation home">
          <img src="/images/logo2.png" alt="Rotorize Aviation Logo" id="siteLogo">
        </a>
      </div>

      <!-- Hamburger for mobile -->
      <button class="menu-toggle" id="menuToggle" aria-label="Open menu" aria-expanded="false">
        <i class="fas fa-bars"></i>
      </button>

      <ul class="nav-links" id="navLinks" role="menu" aria-hidden="true">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/courses">Courses</a></li>
        <li><a href="/services">Services</a></li>
        <li><a href="/portfolio">Portfolio</a></li>
        <li><a href="/blogs">Blogs</a></li>
        <li><a href="/testimonials">Testimonials</a></li>
        <li><a href="/application">Application</a></li>
        <li><a href="/faq">FAQ</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>
  </nav>
</header>

<style>
/* =========================
   NAVBAR → BLACK MENU VERSION
   ========================= */

.site-navbar {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1200;
  background: transparent;
}

.container-navbar {
  max-width: 1200px;
  margin: 0 auto;
  padding: 15px 40px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20px;
}

/* LOGO */
.brand img {
  height: 110px;
  width: auto;
  cursor: pointer;
  filter: drop-shadow(0 0 10px rgba(255,215,0,0.8));
  transition: transform .25s ease;
  border-radius: 6px;
}

.brand img:hover { transform: scale(1.06); }

/* MENU LIST */
.nav-links {
  list-style: none;
  display: flex;
  align-items: center;
  gap: 24px;
  margin: 0;
  padding: 0;
}

/* UPDATED FONT SIZE + GLOW */
.nav-links li a {
  color: #000000 !important;
  text-decoration: none;
  font-weight: 600;
  font-family: 'Poppins', sans-serif;
  font-size: 1.25rem; /* increased */
  padding: 8px 10px;
  text-shadow: 0 0 6px rgba(255,215,0,0.45); /* gold glow */
  transition: 0.25s ease;
}

.nav-links li a:hover {
  color: #000000 !important;
  transform: scale(1.08);
  text-shadow: 
    0 0 10px rgba(255,215,0,0.75),
    0 0 18px rgba(255,215,0,0.55);
}

/* HAMBURGER */
.menu-toggle {
  display: none;
  background: transparent;
  border: none;
  color: #000000 !important;
  font-size: 1.6rem;
  cursor: pointer;
}

/* =========================
   MOBILE MENU
   ========================= */
@media (max-width: 960px) {
  .container-navbar { padding: 12px 20px; }

  .brand img { height: 95px; }

  .menu-toggle { display: block; }

  .nav-links {
    position: fixed;
    top: 0;
    right: -100%;
    height: 100vh;
    width: 74%;
    max-width: 320px;
    background: #ffffff;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 22px;
    padding: 20px;
    transition: right .36s ease;
  }

  .nav-links.active { right: 0; }

  /* Increased mobile font size + glow */
  .nav-links li a {
    font-size: 1.45rem !important;
    color: #000000 !important;
    text-shadow: 0 0 8px rgba(255,215,0,0.4);
  }
}
</style>

<script>
(function(){
  const menuToggle = document.getElementById('menuToggle');
  const navLinks = document.getElementById('navLinks');

  /* Mobile menu open/close */
  menuToggle.addEventListener('click', () => {
    navLinks.classList.toggle('active');
    document.body.style.overflow = navLinks.classList.contains('active') ? 'hidden' : 'auto';
  });

  /* Close menu on link click */
  document.querySelectorAll('.nav-links a').forEach(link => {
    link.addEventListener('click', () => {
      navLinks.classList.remove('active');
      document.body.style.overflow = 'auto';
    });
  });

  /* ✔ LOGO NOW GOES DIRECTLY TO HOMEPAGE */
  // No popup, no overlay, default behavior works
})();
</script>
